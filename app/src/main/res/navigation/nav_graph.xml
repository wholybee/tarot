<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tarotReading">

    <fragment
        android:id="@+id/tarotReading"
        android:name="net.holybee.tarot.TarotQuestionFragment"
        android:label="fragment_tarot_reading"
        tools:layout="@layout/fragment_tarot_question" >

        <action
            android:id="@+id/action_view_card"
            app:destination="@id/cardInfoFragment" />
        <action
            android:id="@+id/action_reading_display"
            app:destination="@id/readingDisplayFragment" />
        <action
            android:id="@+id/action_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_to_purchaseFragment"
            app:destination="@id/purchaseFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardInfoFragment"
        android:name="net.holybee.tarot.CardInfoFragment"
        android:label="fragment_card_info"
        tools:layout="@layout/fragment_card_info" >
        <argument
            android:name="cardDesc"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/readingDisplayFragment"
        android:name="net.holybee.tarot.ReadingDisplayFragment"
        android:label="fragment_reading_display"
        tools:layout="@layout/fragment_reading_display" >
        <argument
            android:name="readingText"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="net.holybee.tarot.AccountFragment"
        android:label="AccountFragment"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_to_purchaseFragment"
            app:destination="@id/purchaseFragment" />
    </fragment>
    <fragment
        android:id="@+id/purchaseFragment"
        android:name="net.holybee.tarot.PurchaseFragment"
        android:label="PurchaseFragment"
        tools:layout="@layout/fragment_purchase"
        />
</navigation>